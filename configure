#!/usr/bin/env -iS bash --noprofile --norc

args=("$@")

# get length of an array
argc=${#args[@]}

ARCH=
PREFIX=
SYSROOT=
BINDIR=

function defaults() {
    if [ -z $JOBS ];			then JOBS=`nproc`;							fi
    export JOBS;
    if [ -z $BRAND ];           then BRAND="BQos";                          fi
    export BRAND
    if [ -z $ARCH ];            then ARCH="i386-BQos";                      fi
    export ARCH
    if [ -z $PREFIX ];          then PREFIX="../PREFIX";                    fi
    export PREFIX
    if [ -z $EXECPREFIX ];      then EXECPREFIX="$PREFIX/usr/local";        fi
    export EXECPREFIX
    if [ -z $SYSROOT ];         then SYSROOT="$PREFIX/$ARCH/sysroot";       fi
    export SYSROOT
    if [ -z $BINDIR ];          then BINDIR="$PREFIX/bin";                  fi
    export BINDIR
    if [ -z $SBINDIR ];         then SBINDIR="$PREFIX/sbin";                fi
    export SBINDIR
    if [ -z $LIBEXECDIR ];      then LIBEXECDIR="$EXECPREFIX/libexec";      fi
    export LIBEXECDIR
    if [ -z $DATAROOTDIR ];     then DATAROOTDIR="$PREFIX/share/$BRAND";    fi
    export DATAROOTDIR
    if [ -z $DATADIR ];         then DATADIR="$DATAROOTDIR";                fi
    export DATADIR
    if [ -z $SYSCONFDIR ];      then SYSCONFDIR="$PREFIX/etc/$BRAND";       fi
    export SYSCONFDIR
    if [ -z $SHAREDSTATEDIR ];  then SHAREDSTATEDIR="$PREFIX/com/$BRAND";   fi
    export SHAREDSTATEDIR
    if [ -z $LOCALSTATEDIR  ];  then LOCALSTATEDIR="$PREFIX/var/$BRAND";    fi
    export LOCALSTATEDIR    
    if [ -z $RUNSTATEDIR    ];  then RUNSTATEDIR="$LOCALSTATEDIR/run";      fi
    export RUNSTATEDIR
    if [ -z $INCLUDEDIR     ];  then INCLUDEDIR="$PREFIX/include";          fi
    export INCLUDEDIR
    #if [ -z $OLDINCLUDEDIR  ];  then OLDINCLUDEDIR=
    export OLDINCLUDEDIR
    if [ -z $DOCDIR         ];  then DOCDIR="$DATAROOTDIR/doc/BQ";          fi
    export DOCDIR
    if [ -z $INFODIR        ];  then INFODIR="$DATAROOTDIR/info/BQ";        fi
    export INFODIR

    
}
# use for loop read all args
for ((i = 0; i < ${argc}; i++)); do
    arg=${args[$i]}
    next_arg=${args[$i + 1]}
    if [ "$arg" == "--prefix" ]; then PREFIX="$next_arg"; i=$i+1; continue ;          fi
    if [ "$arg" == "--exec-prefix" ];then EXECPREFIX="$next_arg"; i=$i+1; continue ;  fi
    if [ "$arg" == "--bindir" ]; then BINDIR="$next_arg"; i=$i+1; continue ;          fi
    if [ "$arg" == "--sbindir" ]; then SBINDIR="$next_arg"; i=$i+1; continue ;        fi
    if [ "$arg" == "--libexecdir" ]; then LIBEXECDIR="$next_arg"; i=$i+1; continue ;           fi
	if [ "$arg" == "--sysconfdir" ]; then SYSCONFDIR="$next_arg"; i=$i+1; continue ;           fi
	if [ "$arg" == "--sharedstatedir" ]; then SHAREDSTATEDIR="$next_arg"; i=$i+1; continue ;       fi
	if [ "$arg" == "--localstatedir" ]; then LOCALSTATEDIR="$next_arg"; i=$i+1; continue ;        fi
	if [ "$arg" == "--runstatedir" ]; then RUNSTATEDIR="$next_arg"; i=$i+1; continue ;          fi
	if [ "$arg" == "--libdir" ]; then LIBDIR="$next_arg"; i=$i+1; continue ;               fi
	if [ "$arg" == "--includedir" ]; then INCLUDEDIR="$next_arg"; i=$i+1; continue ;           fi
	if [ "$arg" == "--oldincludedir" ]; then OLDINCLUDEDIR="$next_arg"; i=$i+1; continue ;        fi
	if [ "$arg" == "--datarootdir" ]; then DATAROOTDIR="$next_arg"; i=$i+1; continue ;          fi
	if [ "$arg" == "--datadir" ]; then DATADIR="$next_arg"; i=$i+1; continue ;              fi
	if [ "$arg" == "--infodir" ]; then INFODIR="$next_arg"; i=$i+1; continue ;              fi
	if [ "$arg" == "--localedir" ]; then LOCALEDIR="$next_arg"; i=$i+1; continue ;            fi
	if [ "$arg" == "--mandir" ]; then MANDIR="$next_arg"; i=$i+1; continue ;               fi
	if [ "$arg" == "--docdir" ]; then DOCDIR="$next_arg"; i=$i+1; continue ;               fi
	if [ "$arg" == "--htmldir" ]; then HTMLDIR="$next_arg"; i=$i+1; continue ;              fi
	if [ "$arg" == "--dvidir" ]; then DVIDIR="$next_arg"; i=$i+1; continue ;               fi
	if [ "$arg" == "--pdfdir" ]; then PDFDIR="$next_arg"; i=$i+1; continue ;               fi
	if [ "$arg" == "--psdir" ]; then PSDIR="$next_arg"; i=$i+1; continue ;            fi
	if [ "$arg" == "--jobs"  ]; then JOBS="$next_arg";  i=$i+1; continue ; fi 
	if [[ "$arg" =~ ^\-\-.*$ ]]; then
		echo "UNSUPPORTED ARG: $arg"
		exit 127
	fi
    if [[ "$arg" =~ ^(.+)(\-.+)+$ ]]; then echo "asdfg"; ARCH="$arg"; continue ;fi # DO NOT INC $i
done
defaults;
echo "EXPORTS:"
export -p
echo -n "Creating CONFIG.mk"
cat CONFIG.mk.IN | envsubst > CONFIG.mk
echo "Done."

echo -n "Writing config.status..."
echo '#!/usr/bin/env bash' >config.status
echo "./configure $@ " >>config.status
chmod a+x config.status
echo "Done."



